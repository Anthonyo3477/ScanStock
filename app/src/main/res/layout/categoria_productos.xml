<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título -->
        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categorías"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="12dp"/>

        <!-- Fila 1 -->
        <LinearLayout
            android:layout_width="390dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <!-- Categoria 1 -->

            <!-- Categoria 2 -->
            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btnPanaderia"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@null"
                    android:contentDescription="Panaderia" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Panaderia" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btnAbarrotes"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@null"
                    android:contentDescription="Abarrotes"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Abarrotes"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>

            <!-- Categoria 3 -->
            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btnLacteos"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@null"
                    android:contentDescription="Lacteos"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lacteos"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Fila 2 (más categorías) -->
        <LinearLayout
            android:layout_width="390dp"
            android:layout_height="150dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Categoria 4 -->
            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btnRefrigerados"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@null"
                    android:contentDescription="Refrigerados"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Refrigerados"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>

            <!-- Categoria 5 -->
            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btnBebidas"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@null"
                    android:contentDescription="Bebidas"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bebidas"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>

            <!-- Categoria 6 (vacío para mantener simetría, puedes añadir más) -->
            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btnLimpieza"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@null"
                    android:contentDescription="Limpieza"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Limpieza Hogar"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>


        </LinearLayout>

        <!-- Fila 3 (más categorías) -->
        <LinearLayout
            android:layout_width="390dp"
            android:layout_height="150dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Categoria 7 -->
            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btnBebe"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@null"
                    android:contentDescription="Bebe"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bebe"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>

            <!-- Categoria 8 -->
            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btnMascota"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@null"
                    android:contentDescription="Mascota"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mascota"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>

            <!-- Categoria 9  -->
            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btnOtros"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@null"
                    android:contentDescription="Otros"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Otros"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>


        </LinearLayout>

        <!-- Ojo este apartado seran para poner las imagenes de los imagen button,
        esas imagenes deben de estar descargadas y agreagdas en la carpeta de drawable -->
        <!-- android:src="@drawable/ic_limpieza" -->

        <Button
            android:id="@+id/btnVolver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="150dp"
            android:layout_marginBottom="16dp"
            android:text="Volver"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>
</ScrollView>
