<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categorías"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="12dp"/>

        <!-- Fila 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <!-- Categoria 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btnAseo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@null"
                    android:contentDescription="Aseo"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aseo"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>

            <!-- Categoria 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btnAlimentos"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@null"
                    android:contentDescription="Alimentos"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alimentos"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>

            <!-- Categoria 3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btnBebidas"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@null"
                    android:contentDescription="Bebidas"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bebidas"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Fila 2 (más categorías) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Categoria 4 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btnCongelados"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@null"
                    android:contentDescription="Congelados"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Congelados"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>

            <!-- Categoria 5 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btnPanaderia"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@null"
                    android:contentDescription="Panadería"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Panadería"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>

            <!-- Categoria 6 (vacío para mantener simetría, puedes añadir más) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btnLimpieza"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@null"
                    android:contentDescription="Limpieza"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Limpieza"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>
        </LinearLayout>
        <!-- Ojo este apartado seran para poner las imagenes de los imagen button,
        esas imagenes deben de estar descargadas y agreagdas en la carpeta de drawable -->
        <!-- android:src="@drawable/ic_limpieza" -->

        <!-- Puedes añadir más filas aquí -->

    </LinearLayout>
</ScrollView>
